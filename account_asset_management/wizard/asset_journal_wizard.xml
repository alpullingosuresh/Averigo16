<odoo>
    <record id="note_wizard_view" model="ir.ui.view">
        <field name="name">Notes</field>
        <field name="model">account.asset</field>
        <field name="arch" type="xml">

            <form>
                <style>
                    .o_form_view.o_form_nosheet{
                    padding-bottom:0;
                    padding-right:0;
                    padding-right:0;
                    padding-top:0;
                    }
                    @media (min-width: 992px){
                    .modal-lg, .modal-xl {
                    max-width: 1200px !important;
                    }}
                    th.o_column_sortable[data-name='message'] {
                    width: 80% !important;
                    background: red !important;
                    max-width: 80% !important;
                    min-width: 80% !important;
                }

                </style>
                <!--                <sheet>-->
                <field name="asset_message_ids">
                    <tree editable="top">

                        <field name="message" string="Message" style="white-space: normal;word-break: break-word;"
                               width="500px"/>
                        <field name="create_date" readonly="1"/>
                        <field name="created_by" readonly="1" widget="many2one_avatar_user"/>
                        <field name="asset_id" invisible="1"/>

                    </tree>
                </field>
                <footer>
                    <button string="Save Note" special="save" class="oe_highlight"/>
                    <button string="Discard" class="btn btn btn o_form_button_cancel btn-secondary" special="cancel"/>
                </footer>
                <!--                </sheet>-->
                <!--                <footer>-->
                <!--                    <button string="Discard" class="btn-secondary"-->
                <!--                            special="cancel"/>-->
                <!--                </footer>-->
            </form>
        </field>
    </record>
    <!--    Machine Location view-->
    <record id="machine_location_history" model="ir.ui.view">
        <field name="name">Machine Placement History.wizard</field>
        <field name="model">machine.placement.history.wizard</field>
        <field name="arch" type="xml">

            <form>
                <style>
                    @media (min-width: 992px){
                    .modal-lg, .modal-xl {
                    max-width: 1200px !important;
                    }}
                </style>
                <field name="machine_placement_ids" create="0">
                    <tree create="0" editable="bottom">
                        <field name="machine_id" invisible="1"/>
                        <field name="destination_location"/>
                        <field name="in_date"/>
                        <field name="date"/>
                        <field name="activity_type"/>
                        <field name="closed_case" invisible="1"/>
                        <!--                        <field name="operator_id"/>-->
                    </tree>
                </field>
                <footer>
                    <button string="Discard" class="btn btn btn o_form_button_cancel btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!--    Activity View-->
    <record id="account_asset_activity_wizard" model="ir.ui.view">
        <field name="name">Activities</field>
        <field name="model">account.asset</field>
        <field name="arch" type="xml">

            <form>
                <style>
                    @media (min-width: 992px){
                    .modal-lg, .modal-xl {
                    max-width: 1200px !important;
                    }}
                </style>
                <!--                <sheet>-->
                <field name="activity_ids" create="0">
                    <tree create="0" editable="bottom">
                        <!---->
                        <field name="note" string="Note" style="white-space: normal;word-break: break-word;"
                               readonly="1"/>
                        <field name="res_model_id" ref="case.management" invisible="1"/>
                        <field name="activity_type_id" readonly="1"/>
                        <field name="create_date" string="Date" readonly="1"/>
                        <field name="date_deadline" string="Deadline" readonly="1"/>
                        <field name="user_id" string="Created By" readonly="1"/>
                        <field name="user_id" string="Assigned To" readonly="1"/>
                        <!---->
                    </tree>
                </field>
                <!--                </sheet>-->
                <footer>
                    <button string="Discard" class="btn btn btn o_form_button_cancel btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


